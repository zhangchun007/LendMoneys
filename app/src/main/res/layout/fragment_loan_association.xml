<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.haiercash.gouhua.view.BankCardView
        android:id="@+id/bcv_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/common1dp"
        android:background="@color/white"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common10dp"
        android:paddingEnd="@dimen/common15dp"
        android:paddingBottom="@dimen/common10dp"
        app:text_style="clear_text" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bcv_view"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common10dp"
        android:paddingEnd="@dimen/common15dp"
        android:text="请选择需要绑定的贷款:(仅限海尔消费金融平台贷款)"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common4dp"
        android:paddingEnd="@dimen/common15dp"
        android:paddingBottom="@dimen/common10dp"
        android:text="关联后的贷款将从当前银行卡扣款"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp12" />

    <include
        layout="@layout/fragment_comm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/tv2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:layout_above="@+id/ll_bottom"
        android:background="#D8D8D8" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common10dp"
        android:paddingEnd="@dimen/common15dp"
        android:paddingBottom="@dimen/common15dp">


        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:button="@drawable/cb_single"
            android:gravity="top"
            android:paddingStart="@dimen/common5dp"
            android:text="我已阅读并同意" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common45dp"
            android:layout_marginTop="@dimen/common15dp"
            android:background="@drawable/selector_big_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="确认关联"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp" />
    </LinearLayout>
</RelativeLayout>