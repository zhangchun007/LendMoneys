<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.haiercash.gouhua.widget.MarqueeTextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF8E4"
        android:drawableStart="@drawable/icon_remind1"
        android:drawablePadding="@dimen/common4dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common9dp"
        android:paddingEnd="@dimen/common15dp"
        android:paddingBottom="@dimen/common8dp"
        android:singleLine="true"
        android:text="您的该笔借款放款后，我们将上报人民银行征信系统，请您在还款日前保持账户余额充足，维护个人信用记录。"
        android:textColor="#D28D01"
        android:textSize="@dimen/sp14"
        tools:viewBindingIgnore="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mineBackground"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="none"
        tools:viewBindingIgnore="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common30dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/vline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common20dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:text="申请已提交,正在审核中..."
                android:textColor="@color/color_303133"
                android:textSize="@dimen/sp20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common15dp"
                android:text="(20S)"
                android:textColor="@color/color_303133"
                android:textSize="@dimen/sp20"
                app:layout_constraintBottom_toBottomOf="@id/tv_status"
                app:layout_constraintStart_toEndOf="@id/tv_status"
                app:layout_constraintTop_toTopOf="@id/tv_status" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common5dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:text="您可在首页查看额度申请状态"
                android:textColor="@color/color_909199"
                android:textSize="@dimen/sp14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_status" />

            <TextView
                android:id="@+id/tv_tip2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common25dp"
                android:layout_marginLeft="@dimen/common15dp"
                android:layout_marginTop="@dimen/common10dp"
                android:layout_marginRight="@dimen/common15dp"
                android:background="@drawable/bg_gray_radius6"
                android:gravity="center"
                android:text="请于3天后尝试申请"
                android:textColor="@color/color_909199"
                android:textSize="@dimen/sp12"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_info" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_mid_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common20dp"
                android:layout_marginEnd="@dimen/common15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tip2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_countdown_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common20dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:text="请耐心等待..."
                android:textColor="@color/color_303133"
                android:textSize="@dimen/sp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_mid_banner" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_back_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common6dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="@dimen/common15dp"
                android:text="系统将返回自动审批结果"
                android:textColor="@color/color_909199"
                android:textSize="@dimen/sp14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_countdown_desc" />

            <View
                android:id="@+id/vline"
                android:layout_width="0dp"
                android:layout_height="@dimen/common15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_back_msg" />

            <LinearLayout
                android:id="@+id/ll_loan_market"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/common15dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vline">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/common15dp"
                    android:paddingTop="@dimen/common15dp"
                    android:paddingEnd="@dimen/common15dp"
                    android:paddingBottom="@dimen/common10dp"
                    android:text="热门推荐"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_loan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_banner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common10dp"
                android:background="@color/white"
                android:contentDescription="额度申请结果页-banner"
                android:padding="@dimen/common15dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_loan_market" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>