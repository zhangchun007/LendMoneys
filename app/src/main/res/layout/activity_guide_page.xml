<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:viewBindingIgnore="true">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/common170dp"
        android:layout_height="@dimen/common45dp"
        android:layout_above="@+id/indicator_line2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:background="@drawable/bg_btn_guide" />

    <com.haiercash.gouhua.view.ViewPagerCircleLineIndicator
        android:id="@+id/indicator_line2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/common30dp"
        app:vpi_animation="true"
        android:layout_alignParentBottom="true"
        app:vpi_default_color="#ffffff"
        app:vpi_distance="14dp"
        app:vpi_distanceType="BY_DISTANCE"
        app:vpi_indicatorType="CIRCLE_LINE"
        app:vpi_length="14dp"
        app:vpi_radius="3dp"
        app:vpi_selected_color="#80ffffff" />

</RelativeLayout>