<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/Divider_0_5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common35dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginEnd="@dimen/common15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/common15dp"
            android:layout_height="@dimen/common15dp"
            android:src="@drawable/icon_warning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common8dp"
            android:gravity="center_vertical"
            android:text="修改登录手机号即修改您的用户名"
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mobile"
            style="@style/myData_text_style"
            android:drawableRight="@drawable/the_arrow_r_grey"
            android:paddingLeft="@dimen/common15dp"
            android:paddingRight="@dimen/common15dp"
            android:text="原手机号仍在使用" />

        <View
            style="@style/Divider05dp_E8EAEF"
            android:layout_marginLeft="@dimen/common15dp" />

        <TextView
            android:id="@+id/tv_new_mobile"
            style="@style/myData_text_style"
            android:drawableRight="@drawable/the_arrow_r_grey"
            android:paddingLeft="@dimen/common15dp"
            android:paddingRight="@dimen/common15dp"
            android:text="原手机号不再使用" />
    </LinearLayout>
</LinearLayout>
