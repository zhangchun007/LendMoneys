<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CouponBagActivityV2">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/bar_header">

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_type1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/bottom_tab_selector"
                android:drawablePadding="@dimen/common4dp"
                android:gravity="center"
                android:text="type1"
                android:textColor="@color/tab_selector"
                android:textSize="@dimen/dimen_16sp" />

            <RadioButton
                android:id="@+id/rb_type2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/bottom_tab_selector"
                android:drawablePadding="@dimen/common4dp"
                android:gravity="center"
                android:text="type2"
                android:textColor="@color/tab_selector"
                android:textSize="@dimen/dimen_16sp" />
        </RadioGroup>

    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_coupon_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_root" />

</androidx.constraintlayout.widget.ConstraintLayout>