<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/bg_repayment_details_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common22dp">

        <com.app.haiercash.base.bui.TitleBarView
            android:id="@+id/bar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginTop="@dimen/common20dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:background="@drawable/shap_plan_bg"
            android:paddingTop="@dimen/common15dp"
            android:paddingBottom="@dimen/common12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_yh_je"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="还款总额(元)"
                android:textColor="@color/color_303133"
                android:textSize="@dimen/sp14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:viewBindingIgnore="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_details"
                android:layout_width="@dimen/common20dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/common5dp"
                android:layout_marginEnd="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/iv_details"
                app:layout_constraintBottom_toBottomOf="@id/tv_yh_je"
                app:layout_constraintLeft_toRightOf="@id/tv_yh_je"
                app:layout_constraintTop_toTopOf="@id/tv_yh_je" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRepaymentAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/common5dp"
                android:text="**.**"
                android:textColor="@color/color_303133"
                android:textSize="@dimen/sp40"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_yh_je" />

            <LinearLayout
                android:id="@+id/llRepaymentCouponTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRepaymentAll">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_repayment_detail_coupon_1"
                    android:paddingStart="@dimen/common7dp"
                    android:paddingTop="@dimen/common1dp"
                    android:paddingEnd="@dimen/common7dp"
                    android:paddingBottom="@dimen/common2dp"
                    android:text="主动还款可享"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCouponTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common2dp"
                    android:text=""
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/dimen_13sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/common10dp"
                android:layout_marginTop="@dimen/common11dp"
                android:layout_marginEnd="@dimen/common10dp"
                android:alpha="0.3"
                android:background="@color/color_e8eaef"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llRepaymentCouponTip" />

            <LinearLayout
                android:id="@+id/llRepaymentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common24dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llRepaymentCouponTip">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本金(元)"
                        android:textColor="@color/color_606166"
                        android:textSize="@dimen/sp13" />

                    <TextView
                        android:id="@+id/tvCapital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**.**"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_interest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="利息(元)"
                        android:textColor="@color/color_606166"
                        android:textSize="@dimen/sp13" />

                    <TextView
                        android:id="@+id/tvInterest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**.**"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRepaymentCouponTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common4dp"
                        android:background="@drawable/bg_repayment_detail_coupon_2"
                        android:paddingStart="@dimen/common8dp"
                        android:paddingTop="@dimen/common2dp"
                        android:paddingEnd="@dimen/common8dp"
                        android:paddingBottom="@dimen/common2dp"
                        android:textColor="@color/color_ff5151"
                        android:textSize="@dimen/dimen_12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFeeAmt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手续费"
                        android:textColor="@color/color_606166"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvApplyTnr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**"
                        android:textColor="@color/color_303133"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginTop="@dimen/common16dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_repayment_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_radius8"
                android:paddingTop="@dimen/common10dp" />

            <!--            <androidx.appcompat.widget.AppCompatTextView-->
            <!--                android:id="@+id/tvRepaymentDetail"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:paddingStart="@dimen/common15dp"-->
            <!--                android:paddingTop="@dimen/common7dp"-->
            <!--                android:paddingEnd="@dimen/common15dp"-->
            <!--                android:textColor="@color/color_909199"-->
            <!--                android:textSize="@dimen/sp14" />-->

            <!--            <androidx.appcompat.widget.AppCompatTextView-->
            <!--                android:id="@+id/tvRepaymentCouponTip2"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:paddingStart="@dimen/common15dp"-->
            <!--                android:paddingEnd="@dimen/common15dp"-->
            <!--                android:paddingBottom="@dimen/common6dp"-->
            <!--                android:textColor="@color/color_ff5151"-->
            <!--                android:textSize="@dimen/sp12"-->
            <!--                android:textStyle="bold"-->
            <!--                android:visibility="invisible" />-->
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRepaymentBottomTipTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common15dp"
            android:paddingStart="@dimen/common28dp"
            android:paddingEnd="@dimen/common28dp"
            android:text="详细说明"
            android:textColor="#363739"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRepaymentBottomTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common6dp"
            android:paddingStart="@dimen/common28dp"
            android:paddingEnd="@dimen/common28dp"
            android:textColor="@color/color_909199"
            android:textSize="@dimen/sp12"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>