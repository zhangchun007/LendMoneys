<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/Divider_0_5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ll_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/img_empty_bill"
            android:gravity="center"
            android:text="什么都没有发生~"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvHelpOK"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common50dp"
            android:layout_marginLeft="@dimen/common15dp"
            android:layout_marginTop="@dimen/common40dp"
            android:layout_marginRight="@dimen/common15dp"
            android:background="@drawable/bg_circle_radius3_blue"
            android:gravity="center"
            android:text="以上都不是,我要反馈"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp17" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
