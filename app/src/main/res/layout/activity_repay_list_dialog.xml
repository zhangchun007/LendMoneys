<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="372dp"
    android:layout_gravity="bottom"
    tools:context=".activity.RepayListDialogActivity"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_repay_list_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/common20dp"
        android:layout_marginEnd="@dimen/common20dp"
        android:src="@drawable/img_close_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common20dp"
        android:layout_marginTop="44dp"
        android:text="够花本月待还(元)"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_head"
        android:background="@color/mineBackground">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_repay_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginEnd="@dimen/common15dp" />
    </LinearLayout>

</RelativeLayout>