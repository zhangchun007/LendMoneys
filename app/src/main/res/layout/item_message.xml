<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f3f6"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common15dp"
    android:paddingRight="@dimen/common15dp"
    android:paddingBottom="@dimen/common5dp"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common25dp"
        android:background="@drawable/bg_circle_radius_e4e8eb"
        android:gravity="center"
        android:paddingLeft="@dimen/common20dp"
        android:paddingRight="@dimen/common20dp"
        android:text="time"
        android:textColor="@color/color_606166"
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common20dp"
        android:background="@drawable/layout_dialog_theme_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginTop="@dimen/common15dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_read"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_circle6_ff5151"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="这是消息通知的标题这是消息通知的标题这是消息通知的标题"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginTop="@dimen/common10dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="这是简介内容这是简介内容这是简介内容这是这是简介内容这是简介内容这是简介内容这是"
            android:textColor="@color/color_909199"
            android:textSize="@dimen/sp13" />

        <View
            style="@style/Divider05dp_E8EAEF"
            android:layout_marginTop="@dimen/common18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:drawableRight="@drawable/img_message_arrow_right_gray"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/common10dp"
            android:paddingBottom="@dimen/common10dp"
            android:text="查看详情"
            android:textColor="@color/color_606166"
            android:textSize="@dimen/dimen_13sp" />
    </LinearLayout>

</LinearLayout>