<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.haiercash.gouhua.homepageview.GHRefreshHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/back_quota_login"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="@dimen/common22dp"
                android:layout_height="@dimen/common22dp"
                android:layout_marginTop="@dimen/common43dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:src="@drawable/img_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="@dimen/common22dp"
                android:layout_height="@dimen/common22dp"
                android:layout_marginTop="@dimen/common43dp"
                android:layout_marginEnd="@dimen/common12dp"
                android:src="@drawable/icon_scan_black"
                app:layout_constraintEnd_toStartOf="@id/iv_message"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_load_card"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common15dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:background="@drawable/bg_blue_radius8"
                app:layout_constraintTop_toBottomOf="@+id/iv_message">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_quota_card"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:background="@drawable/bg_dark_blue_radius8"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="@dimen/common22dp"
                        android:layout_height="@dimen/common18dp"
                        android:layout_marginStart="@dimen/common20dp"
                        android:layout_marginTop="@dimen/common16dp"
                        android:src="@drawable/icon_logo_left_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_organization_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common5dp"
                        android:layout_marginTop="@dimen/common16dp"
                        android:text="京东金融"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_logo"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common2dp"
                        android:layout_marginTop="@dimen/common14dp"
                        android:layout_marginEnd="@dimen/common80dp"
                        android:background="@drawable/icon_home_card_line"
                        app:layout_constraintEnd_toStartOf="@+id/iv_coin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_organization_name" />

                    <ImageView
                        android:id="@+id/iv_coin"
                        android:layout_width="@dimen/common90dp"
                        android:layout_height="@dimen/common80dp"
                        android:src="@drawable/icon_coin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_quota_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common20dp"
                        android:layout_marginTop="@dimen/common25dp"
                        android:text="最高可借额度"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_line" />

                    <RelativeLayout
                        android:id="@+id/rl_quota_card_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common20dp"
                        android:layout_marginTop="@dimen/common6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_quota_card_title">

                        <View
                            android:id="@+id/view_underline"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common8dp"
                            android:layout_marginTop="@dimen/common40dp"
                            android:layout_toStartOf="@+id/tv_quota_card_money"
                            android:layout_toEndOf="@+id/tv_quota_card_money"
                            android:background="@color/color_ff508aff" />

                        <TextView
                            android:id="@+id/tv_quota_card_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200,000"
                            android:textColor="@color/white"
                            android:textSize="44sp" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_submit"
                        android:layout_width="@dimen/common108dp"
                        android:layout_height="@dimen/common40dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_white_radius20"
                        android:gravity="center"
                        android:text="我要借款"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/rl_quota_card_money"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/rl_quota_card_money"
                        app:layout_constraintVertical_bias="0.368" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="以上服务由第三方持牌金融机构提供"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_quota_card" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:src="@drawable/icon_decoration_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_des"
                    app:layout_constraintTop_toBottomOf="@+id/cl_quota_card" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:src="@drawable/icon_decoration_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_des"
                    app:layout_constraintTop_toBottomOf="@+id/cl_quota_card" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_organization_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common15dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_load_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>