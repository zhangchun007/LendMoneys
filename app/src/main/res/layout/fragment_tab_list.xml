<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common1dp"
        android:background="@color/windowBackground" />

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_group"
                android:layout_width="200dp"
                android:layout_height="@dimen/common50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common3dp">

                <RadioButton
                    android:id="@+id/rb_type1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="@drawable/tab_bottom_selector"
                    android:gravity="center"
                    android:text="type1"
                    android:textColor="@color/tab_selector_gray"
                    android:textSize="@dimen/sp18" />

                <RadioButton
                    android:id="@+id/rb_type2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/tab_bottom_selector"
                    android:gravity="center"
                    android:text="type2"
                    android:textColor="@color/tab_selector_gray"
                    android:textSize="@dimen/sp18" />
            </RadioGroup>

            <View style="@style/Divider_0_5dp" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ffefeff3" />
    </LinearLayout>
</LinearLayout>