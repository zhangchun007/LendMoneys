<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mineBackground"
    android:orientation="vertical">

    <View
        android:id="@+id/topLocationDot"
        android:layout_width="@dimen/dp05"
        android:layout_height="@dimen/dp05" />

    <include
        layout="@layout/fragment_comm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvInvalid" />

    <TextView
        android:id="@+id/headInterest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common40dp"
        android:drawableStart="@drawable/icon_des"
        android:drawableLeft="@drawable/icon_des"
        android:drawablePadding="@dimen/common4dp"
        android:gravity="center|start"
        android:paddingStart="@dimen/common15dp"
        android:text="通用说明"
        android:textColor="@color/color_909199"
        android:textSize="@dimen/sp13" />


    <TextView
        android:id="@+id/tvInvalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginBottom="@dimen/common15dp"
        android:drawableEnd="@drawable/icon_right_more"
        android:drawablePadding="@dimen/common6dp"
        android:text="查看失效优惠券"
        android:textColor="@color/color_909199"
        android:textSize="@dimen/dimen_11sp" />
</RelativeLayout>