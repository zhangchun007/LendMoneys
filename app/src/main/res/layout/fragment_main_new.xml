<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mineBackground"
    android:clipChildren="false"
    tools:context=".fragments.main.MainFragment">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.haiercash.gouhua.homepageview.GHRefreshHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHomepage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <RelativeLayout
                android:id="@+id/rlHeadTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common100dp"
                android:alpha="1"
                android:background="@color/transparent">

                <View
                    android:id="@+id/viewHeadBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:alpha="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/common15dp"
                    android:paddingTop="@dimen/common45dp">

                    <ImageView
                        android:id="@+id/ivHeadImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_logo_black" />

                    <TextView
                        android:id="@+id/tvLogoInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common8dp"
                        android:textSize="@dimen/sp13"
                        android:text="海尔消金旗下持牌信用分期平台"
                        android:textColor="@color/color_C3D6FF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tourist"
                    android:text="进入完整版"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_white_stroke_radius20"
                    android:layout_marginEnd="@dimen/common25dp"
                    android:layout_marginTop="@dimen/common50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common35dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_scan_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivScan"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="@dimen/common22dp"
                        android:layout_height="@dimen/common22dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_scan_black" />

                    <ImageView
                        android:id="@+id/ivMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common12dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintLeft_toRightOf="@+id/ivScan"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="消息中心"
                        android:src="@drawable/img_message" />


                    <Space
                        android:id="@+id/id_space"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toRightOf="@+id/ivMessage"
                        app:layout_constraintTop_toTopOf="@id/ivMessage" />

                    <FrameLayout
                        android:id="@+id/layout_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/id_space"
                        app:layout_constraintRight_toRightOf="@+id/id_space">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/notice_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_messge_notice_num_bg"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="9dp"
                            tools:text="99+" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </RelativeLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/llUpAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/common10dp"
        android:layout_marginBottom="222dp"
        android:background="@drawable/src_main_up_amount"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common12dp"
            android:contentDescription="提额文字"
            android:src="@drawable/src_main_up_amount_word" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlVipVideo"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/common10dp"
        android:layout_marginBottom="150dp">

        <ImageView
            android:id="@+id/ivVipClose"
            android:layout_width="@dimen/common14dp"
            android:layout_height="@dimen/common14dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_close_vip_main" />

        <ImageView
            android:layout_width="@dimen/common72dp"
            android:layout_height="@dimen/common72dp"
            android:layout_below="@+id/ivVipClose"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="-5dp"
            android:src="@drawable/src_vip_video" />
    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivFloat"
        android:layout_width="@dimen/common60dp"
        android:layout_height="@dimen/common60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common100dp"
        android:layout_marginEnd="-60dp"
        android:visibility="gone" />

</RelativeLayout>