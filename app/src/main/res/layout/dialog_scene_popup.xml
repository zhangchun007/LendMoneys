<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_scene_popup_connor_8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_scene_popup_title_8"
        android:paddingStart="@dimen/common20dp"
        android:paddingTop="@dimen/common30dp"
        android:paddingEnd="@dimen/common20dp"
        android:text="您有一笔教育分期待提交"
        android:textColor="@color/color_303133"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common20dp"
        android:layout_marginTop="@dimen/common5dp"
        android:layout_marginEnd="@dimen/common20dp"
        android:text="需要继续申请吗？"
        android:textColor="@color/color_303133"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="@dimen/common20dp"
        android:background="@drawable/bg_scene_popup"
        android:orientation="vertical"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common15dp"
        android:paddingEnd="@dimen/common20dp"
        android:paddingBottom="@dimen/common15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@color/color_303133"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="商品名称123"
                android:textColor="@color/color_303133"
                android:textSize="@dimen/dimen_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总价："
                android:textColor="@color/color_303133"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="367.89元"
                android:textColor="@color/color_303133"
                android:textSize="@dimen/dimen_13sp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_continue"
        style="@style/commonButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common46dp"
        android:layout_marginStart="@dimen/common33dp"
        android:layout_marginTop="@dimen/common24dp"
        android:layout_marginEnd="@dimen/common33dp"
        android:text="继续申请"
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/tv_give_up"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginBottom="@dimen/common30dp"
        android:text="退出申请"
        android:textColor="@color/color_909199"
        android:textSize="@dimen/sp16" />
</LinearLayout>