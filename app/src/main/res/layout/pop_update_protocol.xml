<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common34dp"
        android:layout_marginEnd="@dimen/common34dp"
        android:background="@drawable/bg_white_radius8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/common26dp"
        android:paddingBottom="@dimen/common26dp">

        <TextView
            android:id="@+id/tvPopTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/common20dp"
            android:paddingEnd="@dimen/common20dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp17" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common15dp"
            android:lineSpacingMultiplier="1.35"
            android:paddingStart="@dimen/common20dp"
            android:paddingEnd="@dimen/common20dp"
            android:text=""
            android:textColor="@color/color_303133"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tvContentDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common15dp"
            android:lineSpacingMultiplier="1.35"
            android:paddingStart="@dimen/common20dp"
            android:paddingEnd="@dimen/common20dp"
            android:text=""
            android:textColor="@color/color_606166"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="243dp"
            android:layout_height="@dimen/common40dp"
            android:layout_marginTop="@dimen/common10dp"
            android:background="@drawable/bg_quota_commit"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common6dp"
            android:gravity="center"
            android:paddingTop="@dimen/common4dp"
            android:paddingBottom="@dimen/common4dp"
            android:text="无情拒绝"
            android:textColor="@color/color_909199"
            android:textSize="@dimen/sp15" />
    </LinearLayout>
</LinearLayout>