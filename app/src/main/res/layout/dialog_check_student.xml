<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layout_dialog_theme_shape"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common16dp"
        android:text="提示"
        android:textColor="@color/gray_303133"
        android:textSize="@dimen/sp18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common20dp"
        android:layout_marginTop="@dimen/common8dp"
        android:layout_marginRight="@dimen/common16dp"
        android:lineSpacingMultiplier="1.35"
        android:lineHeight="@dimen/sp24"
        android:text="暂时只针对社会人群开放，请在校同学点击左上角“&lt; ”退出申请，谢谢理解"
        android:textColor="@color/gray_606166"
        android:textSize="@dimen/sp15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/common16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="@dimen/common14dp"
            android:layout_height="@dimen/common14dp"
            android:background="@drawable/selector_cb_circle_blue"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common8dp"
            android:layout_marginLeft="@dimen/common8dp"
            android:text="同意并签署"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="非学生群承诺函"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        style="@style/Divider05dp_E8EAEF"
        android:layout_marginTop="@dimen/common16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common16dp"
        android:layout_marginTop="@dimen/common14dp"
        android:layout_marginRight="@dimen/common16dp"
        android:layout_marginBottom="@dimen/common14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/common22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我是学生"
            android:textColor="@color/gray_303133"
            android:textSize="@dimen/sp16" />

        <View style="@style/Divider1dp_portrait" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="@dimen/common22dp"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:text="不是学生"
            android:textColor="@drawable/click_selector"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</LinearLayout>
