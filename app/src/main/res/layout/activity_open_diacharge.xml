<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:background="@color/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_header" />

    <TextView
        android:id="@+id/tv_open_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/common25dp"
        android:text="重要提示"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divder" />

    <TextView
        android:id="@+id/tv_line_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_msg" />

    <TextView
        android:id="@+id/tv_open_content_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common10dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginRight="@dimen/common15dp"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:text="线上仅支持针对在24个月以内结清的贷款开具结清证明(PDF文档形式)，如您需要24个月之前结清贷款的结清证明，请联系客服申请。"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toRightOf="@+id/tv_line_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_msg" />


    <TextView
        android:id="@+id/tv_line_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_one" />

    <TextView
        android:id="@+id/tv_open_content_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common10dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginRight="@dimen/common15dp"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:text="如您需纸质版结清证明,请联系客服申请。\n(纸质版结清证明发送顺丰到付快递)"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toRightOf="@+id/tv_line_two"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_one" />

    <TextView
        android:id="@+id/tv_line_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_two" />

    <TextView
        android:id="@+id/tv_open_content_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common10dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginRight="@dimen/common15dp"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="4"
        android:text="提交申请后，请耐心等待。预计1小时内发送至您预留的邮箱，届时若未收到邮件，请联系客服咨询。"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toRightOf="@+id/tv_line_three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_two" />


    <TextView
        android:id="@+id/tv_line_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_three" />

    <TextView
        android:id="@+id/tv_open_content_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common10dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginRight="@dimen/common15dp"
        android:gravity="left"
        android:maxLines="1"
        android:text="请在贷款结清至少2小时后申请开具结清证明。"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toRightOf="@+id/tv_line_four"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_three" />

    <TextView
        android:id="@+id/tv_line_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_four" />

    <TextView
        android:id="@+id/tv_open_content_five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common10dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginRight="@dimen/common15dp"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:text="如APP上未查询到您想开具结清证明的贷款，请联系客服咨询。\n海尔消费金融官方客服热线：400-018-7777。"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toRightOf="@+id/tv_line_five"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_open_content_four" />
</androidx.constraintlayout.widget.ConstraintLayout>
