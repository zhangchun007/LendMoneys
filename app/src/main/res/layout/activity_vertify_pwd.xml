<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/common15dp">

        <LinearLayout style="@style/change_login_layout_pwd">

            <com.haiercash.gouhua.widget.NewNKeyBoardTextField
                android:id="@+id/edt_old_pwd"
                style="@style/change_login_edt_pwd"
                android:hint="输入原登录密码"
                android:maxLength="20" />

            <CheckBox
                android:id="@+id/passwordCheckBox"
                android:layout_width="@dimen/common20dp"
                android:layout_height="@dimen/common20dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@color/transparent"
                android:button="@drawable/bg_pwd_show_hide" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="11dp"
            android:gravity="right"
            android:text="忘记密码？"
            android:textColor="@color/text_gray_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSetOK"
            style="@style/bigButton"
            android:layout_marginLeft="@dimen/common11dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/common11dp"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp" />
    </LinearLayout>
</LinearLayout>
