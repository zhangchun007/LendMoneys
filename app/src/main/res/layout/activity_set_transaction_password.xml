<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/Divider_0_5dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common16dp"
        android:paddingRight="@dimen/common16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common25dp"
            android:text="设置交易密码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp22"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common6dp"
            android:text="为了您的账户安全请设置6位数字交易密码"
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common20dp"
            android:layout_marginBottom="@dimen/common15dp"
            android:gravity="center"
            android:inputType="number"
            android:maxEms="6"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="20sp" />

        <com.haiercash.gouhua.view.CustomCodeView
            android:id="@+id/password_set_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:style="PassWord" />

        <TextView
            android:id="@+id/tv_set_password"
            style="@style/setbigButton"
            android:layout_marginTop="@dimen/common30dp"
            android:text="设置" />
    </LinearLayout>


</LinearLayout>