<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mineBackground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_calculation"
        android:contentDescription="@string/app_name" />

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/barHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent" />

    <!--    <androidx.core.widget.NestedScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_below="@+id/barHeader"-->
    <!--        android:fillViewport="true">-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/barHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/common20dp"
            android:paddingBottom="@dimen/common20dp">

            <RelativeLayout
                android:id="@+id/ll_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common10dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:background="@drawable/bg_head_main"
                android:orientation="vertical"
                android:paddingStart="@dimen/common15dp"
                android:paddingTop="@dimen/common20dp"
                android:paddingEnd="@dimen/common15dp"
                android:paddingBottom="@dimen/common30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:viewBindingIgnore="true">

                <TextView
                    android:id="@+id/tv_min_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="计划借多少"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    tools:viewBindingIgnore="true" />

                <TextView
                    android:id="@+id/tv_money_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common60dp"
                    android:layout_below="@+id/tv_min_price"
                    android:layout_marginTop="@dimen/common20dp"
                    android:gravity="center_vertical|start|center"
                    android:includeFontPadding="false"
                    android:text="¥"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp25"
                    android:textStyle="bold"
                    tools:viewBindingIgnore="true" />

                <com.haiercash.gouhua.widget.DelEditText
                    android:id="@+id/etLoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common60dp"
                    android:layout_below="@+id/tv_min_price"
                    android:layout_marginTop="@dimen/common20dp"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:layout_toRightOf="@+id/tv_money_icon"
                    android:background="@null"
                    android:drawablePadding="@dimen/common5dp"
                    android:gravity="center_vertical|start|center"
                    android:hint="@string/borrow_str_hit"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:paddingStart="@dimen/common10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/color_BFC2CC"
                    android:textCursorDrawable="@drawable/et_borrow_cusor_color"
                    android:textSize="@dimen/sp50" />

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp05"
                    android:layout_below="@+id/etLoanAmount"
                    android:layout_marginTop="@dimen/common10dp"
                    android:alpha="0.3"
                    android:background="@color/color_e8eaef"
                    tools:viewBindingIgnore="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_rate_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common15dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:background="@drawable/bg_white_radius8"
                android:orientation="vertical"
                android:paddingTop="@dimen/common15dp"
                android:paddingBottom="@dimen/common15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_money"
                tools:viewBindingIgnore="true">

                <TextView
                    android:id="@+id/tv_rate_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|bottom|center"
                    android:paddingStart="@dimen/common15dp"
                    android:text="借多久"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    tools:viewBindingIgnore="true" />

                <HorizontalScrollView
                    android:id="@+id/hsv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_rate_remark"
                    android:layout_marginTop="@dimen/common15dp"
                    android:scrollbars="none"
                    tools:viewBindingIgnore="true">

                    <RadioGroup
                        android:id="@+id/rgRateList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:viewBindingIgnore="true">

                        <RadioButton
                            android:id="@+id/rb_3"
                            android:layout_width="90dp"
                            android:layout_height="@dimen/common36dp"
                            android:layout_marginStart="@dimen/common15dp"
                            android:layout_marginEnd="@dimen/common15dp"
                            android:background="@drawable/bg_rate_cal_select"
                            android:button="@null"
                            android:gravity="center"
                            android:tag="3"
                            android:text="3期"
                            android:textColor="@color/rate_cal_select" />

                        <RadioButton
                            android:id="@+id/rb_6"
                            android:layout_width="90dp"
                            android:layout_height="@dimen/common36dp"
                            android:layout_marginEnd="@dimen/common15dp"
                            android:background="@drawable/bg_rate_cal_select"
                            android:button="@null"
                            android:gravity="center"
                            android:tag="6"
                            android:text="6期"
                            android:textColor="@color/rate_cal_select" />

                        <RadioButton
                            android:id="@+id/rb_9"
                            android:layout_width="90dp"
                            android:layout_height="@dimen/common36dp"
                            android:layout_marginEnd="@dimen/common15dp"
                            android:background="@drawable/bg_rate_cal_select"
                            android:button="@null"
                            android:gravity="center"
                            android:tag="9"
                            android:text="9期"
                            android:textColor="@color/rate_cal_select" />

                        <RadioButton
                            android:id="@+id/rb_12"
                            android:layout_width="90dp"
                            android:layout_height="@dimen/common36dp"
                            android:layout_marginEnd="@dimen/common15dp"
                            android:background="@drawable/bg_rate_cal_select"
                            android:button="@null"
                            android:gravity="center"
                            android:tag="12"
                            android:text="12期"
                            android:textColor="@color/rate_cal_select" />
                    </RadioGroup>
                </HorizontalScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common15dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:background="@drawable/bg_white_radius8"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_rate_select">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common15dp"
                    android:gravity="start|center"
                    android:minHeight="@dimen/common50dp"
                    android:text="怎么还"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    tools:viewBindingIgnore="true" />

                <TextView
                    android:id="@+id/tvRepayWay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:drawableEnd="@drawable/the_arrow_r_grey"
                    android:drawablePadding="@dimen/common5dp"
                    android:gravity="end|center"
                    android:minHeight="@dimen/common50dp"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    tools:viewBindingIgnore="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRepayWay"
                    android:layout_marginStart="@dimen/common15dp"
                    android:gravity="start|center"
                    android:minHeight="@dimen/common50dp"
                    android:text="年化利率"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    tools:viewBindingIgnore="true" />

                <TextView
                    android:id="@+id/tvUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRepayWay"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:drawablePadding="@dimen/common5dp"
                    android:gravity="end|center"
                    android:minHeight="@dimen/common50dp"
                    android:paddingStart="@dimen/common5dp"
                    android:text="%"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    tools:viewBindingIgnore="true" />

                <EditText
                    android:id="@+id/detRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRepayWay"
                    android:layout_toLeftOf="@+id/tvUnit"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:minWidth="@dimen/common160dp"
                    android:minHeight="@dimen/common50dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_303133"
                    android:textColorHint="@color/color_BFC2CC"
                    android:textCursorDrawable="@drawable/et_borrow_cusor_color"
                    android:textSize="@dimen/sp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp05"
                    android:layout_below="@+id/tvRepayWay"
                    android:alpha="0.3"
                    android:background="@color/color_e8eaef"
                    tools:viewBindingIgnore="true" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <!--    </androidx.core.widget.NestedScrollView>-->
    <TextView
        android:id="@+id/tvConfirm"
        style="@style/bigButton"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginTop="@dimen/common36dp"
        android:layout_marginEnd="@dimen/common15dp"
        android:layout_marginBottom="@dimen/common20dp"
        android:background="@drawable/bg_blue2_radius25"
        android:text="开始试算"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purpose" />

    <include
        layout="@layout/include_keyboardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />
</RelativeLayout>