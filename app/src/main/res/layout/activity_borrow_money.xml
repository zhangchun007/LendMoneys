<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mineBackground"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/bg_borrow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.app.haiercash.base.bui.TitleBarView
            android:id="@+id/bar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/headLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_warning"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/iv_back_arrow_blues" />

        <View
            style="@style/Divider_0_5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/bar_header" />

        <com.haiercash.gouhua.widget.MarqueeTextView
            android:id="@+id/tv_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_header"
            android:background="@color/color_fff4d4"
            android:drawableLeft="@drawable/icon_remind1"
            android:drawablePadding="@dimen/common10dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="@dimen/common15dp"
            android:paddingTop="@dimen/common5dp"
            android:paddingEnd="@dimen/common5dp"
            android:paddingBottom="@dimen/common5dp"
            android:singleLine="true"
            android:text="用于日常消费，资金短缺，请勿将借款用于理财投资或利用借款从事违法活动。请合规贷款，理性借钱。"
            android:textColor="@color/color_975200"
            android:textSize="@dimen/sp14"
            tools:viewBindingIgnore="true" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nesContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_warning"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common20dp"
                android:paddingBottom="@dimen/common20dp">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_borrow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:id="@+id/ll_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common15dp"
                        android:layout_marginTop="@dimen/common20dp"
                        android:layout_marginEnd="@dimen/common15dp"
                        android:background="@drawable/bg_head_main"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingTop="@dimen/common20dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:paddingBottom="@dimen/common8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:viewBindingIgnore="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMinPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="计划借多少"
                            android:textColor="#303133"
                            android:textSize="@dimen/sp16"
                            tools:viewBindingIgnore="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/etLoanAmountBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tvMinPrice"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:text="全部借出"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp16" />

                        <com.haiercash.gouhua.widget.DelEditText
                            android:id="@+id/tv_money_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/common50dp"
                            android:layout_below="@+id/tvMinPrice"
                            android:layout_marginTop="@dimen/common20dp"
                            android:background="@null"
                            android:drawablePadding="@dimen/common5dp"
                            android:gravity="center_vertical|start"
                            android:includeFontPadding="false"
                            android:inputType="number"
                            android:text="¥"
                            android:textColor="@color/color_303133"
                            android:textColorHint="@color/color_BFC2CC"
                            android:textSize="@dimen/sp25"
                            android:textStyle="bold"
                            tools:viewBindingIgnore="true" />

                        <com.haiercash.gouhua.widget.DelEditText
                            android:id="@+id/etLoanAmount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common50dp"
                            android:layout_below="@+id/tvMinPrice"
                            android:layout_marginTop="@dimen/common20dp"
                            android:layout_marginEnd="@dimen/common15dp"
                            android:layout_toEndOf="@+id/tv_money_icon"
                            android:background="@null"
                            android:drawablePadding="@dimen/common5dp"
                            android:gravity="center_vertical|start"
                            android:hint="@string/borrow_str_hit"
                            android:includeFontPadding="false"
                            android:inputType="number"
                            android:maxLength="7"
                            android:paddingStart="@dimen/common10dp"
                            android:paddingEnd="0dp"
                            android:singleLine="true"
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/color_D6D8E0"
                            android:textCursorDrawable="@drawable/et_borrow_cusor_color"
                            android:textSize="@dimen/sp20"
                            app:delete_icon_w="@dimen/common20dp" />


                        <View
                            android:id="@+id/v_line"
                            style="@style/Divider_0_33dp_E8EAEF"
                            android:layout_below="@+id/etLoanAmount"
                            android:layout_marginTop="@dimen/common5dp"
                            tools:viewBindingIgnore="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/edLoanAmountTip"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common17dp"
                            android:layout_below="@+id/v_line"
                            android:layout_marginTop="@dimen/common4dp"
                            android:drawablePadding="@dimen/common5dp"
                            android:gravity="center_vertical"
                            android:textColor="#303133"
                            android:textSize="@dimen/dimen_12sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <!--做定位使用的-->
                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ll_money"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <!--有多少张免息券的提示语-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_coupon_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common15dp"
                        android:background="@drawable/img_coupons_tips_bg"
                        android:paddingLeft="@dimen/common13dp"
                        android:paddingTop="@dimen/common15dp"
                        android:paddingRight="@dimen/common13dp"
                        android:paddingBottom="@dimen/common8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/viewLine"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/viewLine"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/img_coupon_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_coupon_tag"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_coupon_num_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common5dp"
                            android:textColor="#FF5151"
                            android:textSize="13dp"
                            app:layout_constraintLeft_toRightOf="@+id/img_coupon_tag"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="您有7张免息券待使用" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:id="@+id/ll_rate_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common15dp"
                    android:layout_marginTop="@dimen/common15dp"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:background="@drawable/bg_white_radius8"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/common15dp"
                    android:paddingBottom="@dimen/common20dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_money"
                    tools:viewBindingIgnore="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_rate_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common15dp"
                        android:gravity="start|bottom|center"
                        android:text="借多久"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16"
                        tools:viewBindingIgnore="true" />

                    <HorizontalScrollView
                        android:id="@+id/hsv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_rate_remark"
                        android:layout_marginStart="@dimen/common15dp"
                        android:layout_marginTop="@dimen/common15dp"
                        android:scrollbars="none"
                        tools:viewBindingIgnore="true">

                        <RadioGroup
                            android:id="@+id/rgRateList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </RadioGroup>
                    </HorizontalScrollView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/v_first_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common15dp"
                    android:layout_marginTop="@dimen/common15dp"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:background="@drawable/bg_white_radius8"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_rate_select"
                    tools:viewBindingIgnore="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHowRepay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common15dp"
                        android:gravity="start|bottom|center"
                        android:paddingTop="@dimen/common14dp"
                        android:paddingBottom="@dimen/common14dp"
                        android:text="怎么还"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16"
                        tools:viewBindingIgnore="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_repay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/common15dp"
                        android:drawableEnd="@drawable/the_arrow_r_grey"
                        android:drawablePadding="@dimen/common5dp"
                        android:gravity="start|bottom|center"
                        android:paddingTop="@dimen/common14dp"
                        android:paddingBottom="@dimen/common14dp"
                        android:text="等额本息"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16"
                        tools:viewBindingIgnore="true" />

                    <include
                        android:id="@+id/layoutBannerAndCoupon"
                        layout="@layout/layout_borrow_banner_and_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvHowRepay" />

                    <View
                        style="@style/Divider_0_33dp_E8EAEF"
                        android:layout_below="@+id/layoutBannerAndCoupon" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRepaymentPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutBannerAndCoupon"
                        android:layout_marginTop="@dimen/dp05"
                        android:drawableEnd="@drawable/the_arrow_r_grey"
                        android:drawablePadding="@dimen/common5dp"
                        android:gravity="end|center"
                        android:minHeight="@dimen/common50dp"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingTop="@dimen/common12dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:paddingBottom="@dimen/common12dp"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_repayment_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_alignTop="@id/tvRepaymentPlan"
                        android:layout_alignBottom="@id/tvRepaymentPlan"
                        android:drawablePadding="@dimen/common5dp"
                        android:gravity="start|center"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:text="还款计划"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/v_second_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common15dp"
                    android:layout_marginTop="@dimen/common15dp"
                    android:layout_marginEnd="@dimen/common15dp"
                    android:background="@drawable/bg_white_radius8"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_first_group"
                    tools:viewBindingIgnore="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bank_select"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common50dp"
                        android:gravity="start|center"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:text="收款账户"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bank_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common50dp"
                        android:layout_alignParentEnd="true"
                        android:drawableEnd="@drawable/the_arrow_r_grey"
                        android:drawablePadding="@dimen/common10dp"
                        android:gravity="end|center|center_vertical"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16"
                        tools:ignore="RelativeOverlap" />

                    <View
                        style="@style/Divider_0_33dp_E8EAEF"
                        android:layout_below="@+id/tv_bank_select" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common50dp"
                        android:layout_below="@+id/tv_bank_select"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/dp05"
                        android:gravity="start|center"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:text="借款用途"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common50dp"
                        android:layout_below="@+id/tv_bank_select"
                        android:layout_marginTop="@dimen/dp05"
                        android:drawableEnd="@drawable/the_arrow_r_grey"
                        android:drawablePadding="@dimen/common10dp"
                        android:gravity="end|center"
                        android:paddingStart="@dimen/common15dp"
                        android:paddingEnd="@dimen/common15dp"
                        android:text="日常消费"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common60dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_second_group" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_confirm"
            style="@style/commonButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginTop="@dimen/common36dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:layout_marginBottom="@dimen/common15dp"
            android:text="下一步"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_purpose" />

        <include
            layout="@layout/include_keyboardview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/v_extra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucency"
        android:visibility="gone" />
</RelativeLayout>