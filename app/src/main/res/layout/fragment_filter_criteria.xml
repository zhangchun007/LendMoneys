<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:viewBindingIgnore="true">

    <View style="@style/Divider_0_5dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginTop="@dimen/common15dp"
        android:text="交易时间"
        android:textColor="@color/black"
        android:textSize="@dimen/sp17"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginEnd="@dimen/common15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_three_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_rb_stroke1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/common10dp"
            android:tag="threeMonth"
            android:text="近三月"
            android:textColor="@color/selector_text_color"
            android:textSize="@dimen/sp16" />

        <RadioButton
            android:id="@+id/rb_six_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common10dp"
            android:layout_marginEnd="@dimen/common10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_rb_stroke1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/common10dp"
            android:tag="sixMonth"
            android:text="近半年"
            android:textColor="@color/selector_text_color"
            android:textSize="@dimen/sp16" />

        <RadioButton
            android:id="@+id/rb_one_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_rb_stroke1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/common10dp"
            android:tag="oneYear"
            android:text="近一年"
            android:textColor="@color/selector_text_color"
            android:textSize="@dimen/sp16" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_type"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginEnd="@dimen/common15dp"
        android:text="自定义"
        android:textColor="@color/black"
        android:textSize="@dimen/sp17"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv2"
        android:layout_marginStart="@dimen/common2dp"
        android:layout_marginTop="@dimen/common2dp"
        android:layout_toEndOf="@+id/tv2"
        android:text="请选择小于365天的时间间隔"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginTop="@dimen/common15dp"
        android:layout_marginEnd="@dimen/common15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/common45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_rb_stroke1"
            android:gravity="center"
            android:hint="选择开始时间"
            android:paddingStart="@dimen/common10dp"
            android:paddingEnd="@dimen/common10dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />

        <View
            style="@style/Divider_0_5dp"
            android:layout_width="@dimen/common10dp"
            android:layout_height="@dimen/common2dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/common10dp"
            android:layout_marginEnd="@dimen/common10dp" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/common45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_rb_stroke1"
            android:gravity="center"
            android:hint="选择开始时间"
            android:paddingStart="@dimen/common10dp"
            android:paddingEnd="@dimen/common10dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common48dp"
        android:layout_below="@+id/ll_time"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/common15dp"
        android:layout_marginTop="@dimen/common40dp"
        android:layout_marginEnd="@dimen/common15dp"
        android:background="@drawable/selector_big_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp" />
</RelativeLayout>