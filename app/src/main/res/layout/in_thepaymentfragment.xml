<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View style="@style/Divider_0_5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common34dp"
            android:paddingStart="@dimen/common30dp"
            android:paddingEnd="0dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/common24dp"
                android:layout_height="@dimen/common24dp"
                android:src="@drawable/payment_success" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_toEndOf="@+id/iv1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付成功"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common3dp"
                    android:text="0.00元"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                android:id="@+id/v_line1"
                android:layout_width="@dimen/dp05"
                android:layout_height="@dimen/common48dp"
                android:layout_below="@+id/iv1"
                android:layout_marginStart="11.75dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/common24dp"
                android:layout_height="@dimen/common24dp"
                android:layout_below="@+id/v_line1"
                android:src="@drawable/submit_waite" />

            <TextView
                android:id="@+id/tv_paying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_line1"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_toEndOf="@+id/iv2"
                android:gravity="center"
                android:text="还款处理中"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16" />

            <View
                android:id="@+id/v_line2"
                android:layout_width="@dimen/dp05"
                android:layout_height="@dimen/common48dp"
                android:layout_below="@+id/iv2"
                android:layout_marginStart="11.75dp"
                android:background="#BEC2CD" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/common24dp"
                android:layout_height="@dimen/common24dp"
                android:layout_below="@+id/v_line2"
                android:src="@drawable/submit_result" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_line2"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_toEndOf="@+id/iv3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="还款结果"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/tvResultMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common3dp"
                    android:text="0.00元"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginTop="@dimen/common30dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:background="@drawable/bg_f9f9f9_trans_8"
            android:padding="@dimen/common10dp"
            android:text="完成还款后，您的额度和账单状态将会更新"
            android:textColor="@color/color_606166"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common30dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/common40dp"
            android:paddingEnd="@dimen/common40dp">

            <TextView
                android:id="@+id/btn_loan"
                android:layout_width="0dp"
                android:layout_height="@dimen/common36dp"
                android:layout_marginEnd="@dimen/common40dp"
                android:layout_marginBottom="@dimen/common30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_radius18"
                android:gravity="center"
                android:text="查看还款记录"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="@dimen/common36dp"
                android:layout_marginBottom="@dimen/common30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_radius18"
                android:gravity="center"
                android:text="去首页看看"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_mid_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common15dp"
            android:layout_marginEnd="@dimen/common15dp"
            android:layout_marginBottom="@dimen/common20dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common15dp"
                android:background="@color/white"
                android:contentDescription="还款申请结果页-banner"
                android:padding="@dimen/common15dp"
                android:src="@drawable/ic_default_banner"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>