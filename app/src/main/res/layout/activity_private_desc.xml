<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/Divider05dp_EDEFF2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mineBackground"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/common10dp">

                <LinearLayout
                    android:id="@+id/ll_private_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common62dp"
                    android:layout_marginTop="@dimen/common10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common15dp"
                    android:paddingEnd="@dimen/common15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/private_desc_private_protocol"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common5dp"
                        android:layout_marginEnd="@dimen/common5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/color_909199"
                        android:textSize="@dimen/sp14" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/common10dp"
                        android:layout_height="@dimen/common12dp"
                        app:srcCompat="@drawable/icon_right_more" />
                </LinearLayout>

                <include layout="@layout/include_line_left_space" />

                <LinearLayout
                    android:id="@+id/ll_other_share_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common62dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common15dp"
                    android:paddingEnd="@dimen/common15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/private_desc_other_share_list"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common5dp"
                        android:layout_marginEnd="@dimen/common5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/color_909199"
                        android:textSize="@dimen/sp14" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/common10dp"
                        android:layout_height="@dimen/common12dp"
                        app:srcCompat="@drawable/icon_right_more" />
                </LinearLayout>

                <include layout="@layout/include_line_left_space" />

                <LinearLayout
                    android:id="@+id/ll_info_collect_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common62dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common15dp"
                    android:paddingEnd="@dimen/common15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/private_desc_info_collect_list"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common5dp"
                        android:layout_marginEnd="@dimen/common5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/color_909199"
                        android:textSize="@dimen/sp14" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/common10dp"
                        android:layout_height="@dimen/common12dp"
                        app:srcCompat="@drawable/icon_right_more" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_withdraw_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common25dp"
            android:text="撤销同意隐私政策" />
    </RelativeLayout>
</LinearLayout>