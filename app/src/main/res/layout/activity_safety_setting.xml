<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/Divider_0_5dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mineBackground"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common10dp">

            <LinearLayout
                android:id="@+id/ll_login_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:layout_marginTop="@dimen/common10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_login_mobile"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_login_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <include
                android:id="@+id/line_real_name"
                layout="@layout/include_line_left_space" />

            <LinearLayout
                android:id="@+id/ll_real_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_real_name"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_real_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <include layout="@layout/include_line_left_space" />

            <LinearLayout
                android:id="@+id/ll_other_bind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_other_bind"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:paddingTop="@dimen/common14dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:paddingBottom="@dimen/common6dp"
                android:maxLines="1"
                android:text="@string/safe_setting_login_type"
                android:textColor="@color/color_909199"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_login_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_set_login_pwd"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <include layout="@layout/include_line_left_space" />

            <LinearLayout
                android:id="@+id/ll_login_gesture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_login_gesture"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_gesture_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@string/safe_setting_login_quick_status_no"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <include
                android:id="@+id/line_login_fingerprint"
                layout="@layout/include_line_left_space" />

            <LinearLayout
                android:id="@+id/ll_login_fingerprint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_login_fingerprint"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_fingerprint_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@string/safe_setting_login_quick_status_no"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pay_pwd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:paddingTop="@dimen/common14dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:paddingBottom="@dimen/common6dp"
                android:maxLines="1"
                android:text="@string/safe_setting_pay_pwd"
                android:textColor="@color/color_909199"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_pay_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_pay_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_pay_pwd_set"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_other_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:paddingTop="@dimen/common14dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:paddingBottom="@dimen/common6dp"
                android:maxLines="1"
                android:text="@string/safe_setting_other"
                android:textColor="@color/color_909199"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_account_appeal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_account_appeal"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@string/safe_setting_account_appeal_desc"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>

            <include
                android:id="@+id/line_cancellation"
                layout="@layout/include_line_left_space" />

            <LinearLayout
                android:id="@+id/ll_cancellation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/common15dp"
                android:paddingEnd="@dimen/common15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_setting_cancellation"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common5dp"
                    android:layout_marginEnd="@dimen/common5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/common10dp"
                    android:layout_height="@dimen/common12dp"
                    app:srcCompat="@drawable/icon_right_more" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>