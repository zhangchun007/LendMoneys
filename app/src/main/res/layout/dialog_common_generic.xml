<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:viewBindingIgnore="true">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@color/transparent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="7.6"
        android:background="@drawable/layout_dialog_theme_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/common26dp">

        <RelativeLayout
            android:id="@+id/ll_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="提示"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/common13dp"
                android:layout_height="@dimen/common13dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/common12dp"
                android:layout_marginEnd="@dimen/common12dp"
                android:layout_marginRight="@dimen/common12dp"
                android:src="@drawable/icon_close_small"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.35dp"
            android:background="#edeff2" />

        <LinearLayout
            android:id="@+id/ll_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common8dp"
            android:layout_marginBottom="@dimen/common20dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/sv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common20dp"
                    android:layout_marginRight="@dimen/common20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dialog_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/common4dp"
                        android:text="请授权手机存储权限"
                        android:textColor="@color/color_606166"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="0.35dp"
            android:background="#edeff2" />

        <LinearLayout
            android:id="@+id/ll_dialog_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common10dp"
            android:layout_marginEnd="@dimen/common10dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/common50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_btn1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/common10dp"
                android:layout_marginEnd="@dimen/common10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/common6dp"
                android:paddingBottom="@dimen/common6dp"
                android:text="确定"
                android:textColor="@color/text_gray_dark"
                android:textSize="16sp" />

            <View
                android:id="@+id/line2_dialog"
                style="@style/Divider1dp_portrait"
                android:layout_height="@dimen/common22dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dialog_btn2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/common10dp"
                android:layout_marginEnd="@dimen/common10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/common6dp"
                android:paddingBottom="@dimen/common6dp"
                android:text="取消"
                android:textColor="@color/fffc594c"
                android:textSize="16sp"
                android:visibility="gone" />

            <View
                android:id="@+id/line3_dialog"
                style="@style/Divider1dp_portrait"
                android:layout_height="@dimen/common22dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dialog_btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common10dp"
                android:layout_marginEnd="@dimen/common10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/common6dp"
                android:paddingBottom="@dimen/common6dp"
                android:text="取消"
                android:textColor="@color/fffc594c"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@color/transparent" />
</LinearLayout>