<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/rgMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_loan_market_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/common40dp"
            android:layout_weight="1"
            android:contentDescription="贷超"
            android:visibility="gone"
            android:src="@drawable/selector_bottom_loan_market" />

        <ImageView
            android:id="@+id/rbHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/common40dp"
            android:layout_weight="1"
            android:contentDescription="首页"
            android:src="@drawable/selector_bottom_home_top" />

        <ImageView
            android:id="@+id/rbFind"
            android:layout_width="0dp"
            android:layout_height="@dimen/common40dp"
            android:layout_weight="1"
            android:contentDescription="会员"
            android:src="@drawable/selector_bottom_member_top" />

        <ImageView
            android:id="@+id/rbMine"
            android:layout_width="0dp"
            android:layout_height="@dimen/common40dp"
            android:layout_weight="1"
            android:contentDescription="我的"
            android:src="@drawable/selector_bottom_mine_top" />
    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:layout_above="@id/rgMenu"
        android:background="@color/windowBackground" />

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/vLine"
        android:background="@color/windowBackground" />
</RelativeLayout>
