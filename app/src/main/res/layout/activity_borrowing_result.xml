<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.app.haiercash.base.bui.TitleBarView
        android:id="@+id/bar_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_borrow_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_borrow_result_top"
                app:layout_constraintDimensionRatio="h,750:412"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/common56dp"
                android:background="@drawable/bg_white_t20_b8"
                app:layout_constraintBottom_toBottomOf="@id/v_top_white_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_result" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_result_bg"
                android:layout_width="@dimen/common123dp"
                android:layout_height="@dimen/common108dp"
                android:layout_marginTop="@dimen/common104dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_borrow_result_waiting_bg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_result"
                android:layout_width="@dimen/common123dp"
                android:layout_height="@dimen/common108dp"
                android:layout_marginTop="@dimen/common104dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_borrow_result_waiting" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借款审批中"
                android:textColor="@color/color_303133"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_result" />

            <LinearLayout
                android:id="@+id/ll_applyAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_result">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_applyAmt0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp30"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_applyAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp30"
                    android:textStyle="bold" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_applyAmt">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_fail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/common15dp"
                    android:text="很抱歉，您的审核未通过"
                    android:textColor="@color/color_909199"
                    android:textSize="@dimen/dimen_14sp"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_check_recode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/common20dp"
                    android:background="@drawable/bg_primary_color_16_5"
                    android:gravity="center"
                    android:paddingStart="@dimen/common18dp"
                    android:paddingTop="@dimen/common6dp"
                    android:paddingEnd="@dimen/common18dp"
                    android:paddingBottom="@dimen/common6dp"
                    android:text="查看借款记录"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14sp"
                    android:visibility="visible" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_mid_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common15dp"
                android:layout_marginTop="@dimen/common40dp"
                android:layout_marginEnd="@dimen/common15dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_desc" />

            <View
                android:id="@+id/v_top_white_end"
                android:layout_width="0dp"
                android:layout_height="@dimen/common15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_mid_banner" />

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common10dp"
                android:background="@color/white"
                android:contentDescription="借款申请结果页-banner"
                android:padding="@dimen/common15dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_top_white_end" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.haiercash.gouhua.widget.MarqueeTextView
        android:id="@+id/tv_notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF8E4"
        android:drawableStart="@drawable/icon_remind1"
        android:drawablePadding="@dimen/common4dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingStart="@dimen/common15dp"
        android:paddingTop="@dimen/common9dp"
        android:paddingEnd="@dimen/common15dp"
        android:paddingBottom="@dimen/common8dp"
        android:singleLine="true"
        android:text="您的该笔借款放款后，我们将上报人民银行征信系统，请您在还款日前保持账户余额充足，维护个人信用记录。"
        android:textColor="#D28D01"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar_header"
        tools:viewBindingIgnore="true" />

    <View
        android:id="@+id/v_borrow_result_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_head_rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="完成"
        android:textColor="@color/color_303133"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_notice"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>