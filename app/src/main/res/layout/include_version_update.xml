<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000"
    tools:viewBindingIgnore="true">

    <RelativeLayout
        android:id="@+id/rl_ypdate"
        android:layout_width="290dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_version_update"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:scaleType="fitXY"
            android:src="@drawable/iv_version_update_head" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_version_update"
            android:layout_alignStart="@+id/iv_version_update"
            android:layout_alignLeft="@+id/iv_version_update"
            android:layout_alignEnd="@+id/iv_version_update"
            android:layout_alignRight="@+id/iv_version_update"
            android:background="@drawable/bg_btn_version_update">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common10dp"
                android:background="@drawable/bg_bottom_radius"
                android:orientation="vertical"
                android:paddingLeft="@dimen/common25dp"
                android:paddingRight="@dimen/common25dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="版本升级"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common10dp"
                    android:gravity="start|top|center"
                    android:lineSpacingExtra="@dimen/common2dp"
                    android:longClickable="true"
                    android:maxHeight="@dimen/common66dp"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:text="全新的设计，更好的体验，申请即享至高20万额度，我管够，你管花，快来升级吧！"
                    android:textColor="@color/text_black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_version_update_qiangzhi"
                android:layout_width="180dp"
                android:layout_height="@dimen/common60dp"
                android:layout_below="@+id/ll_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/common10dp"
                android:layout_marginBottom="@dimen/common15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_btn_update"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_no_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/common10dp"
                android:layout_marginBottom="@dimen/common15dp"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/btn_cancle1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common60dp"
                    android:layout_marginLeft="@dimen/common20dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_no_update_img" />

                <ImageView
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common60dp"
                    android:layout_marginRight="@dimen/common20dp"
                    android:layout_weight="1"
                    android:src="@drawable/bt_qiangxian_img" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_version_update_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ypdate"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        android:src="@drawable/close_icon" />
</RelativeLayout>