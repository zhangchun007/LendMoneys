<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/common16dp"
    android:paddingRight="@dimen/common16dp"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common48dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_pay1"
            style="@style/PayPassWord" />


        <TextView
            android:id="@+id/tv_pay2"
            style="@style/PayPassWord" />


        <TextView
            android:id="@+id/tv_pay3"
            style="@style/PayPassWord" />


        <TextView
            android:id="@+id/tv_pay4"
            style="@style/PayPassWord" />

        <TextView
            android:id="@+id/tv_pay5"
            style="@style/PayPassWord" />


        <TextView
            android:id="@+id/tv_pay6"
            style="@style/PayPassWord" />
    </LinearLayout>

    <com.haiercash.gouhua.widget.NewNKeyBoardTextField
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:cursorVisible="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint=""
        android:maxLength="6"
        android:textColor="@color/transparent"
        android:textSize="0sp" />


</RelativeLayout>